{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "max-classes-per-file": ["error", 2],
        "no-param-reassign": ["error", { "props": false }],
        "no-use-before-define": ["error", {
            "functions": false
        }],
        "prefer-destructuring": ["error", {"object": false, "array": false}]
    }
}
